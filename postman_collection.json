{
	"info": {
		"_postman_id": "url-shortener-api",
		"name": "URL Shortener API",
		"description": "Complete API collection for URL Shortener service",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Shorten URL",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"long_url\": \"https://www.example.com/very/long/url/that/needs/shortening\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/shorten",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"shorten"
					]
				},
				"description": "Shorten a long URL"
			},
			"response": []
		},
		{
			"name": "Shorten URL with Expiration",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"long_url\": \"https://www.example.com/very/long/url/that/needs/shortening\",\n    \"expires_at\": \"2024-12-31T23:59:59Z\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/shorten",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"shorten"
					]
				},
				"description": "Shorten a URL with expiration date"
			},
			"response": []
		},
		{
			"name": "Redirect to Original URL",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/{{short_code}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"{{short_code}}"
					]
				},
				"description": "Redirect to the original URL using short code"
			},
			"response": []
		},
		{
			"name": "Get All URLs",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/urls",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"urls"
					]
				},
				"description": "Get all stored URLs"
			},
			"response": []
		},
		{
			"name": "Get Specific URL",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/urls/{{short_code}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"urls",
						"{{short_code}}"
					]
				},
				"description": "Get a specific URL by short code"
			},
			"response": []
		},
		{
			"name": "Update URL",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"long_url\": \"https://www.newexample.com/updated/url\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/urls/{{short_code}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"urls",
						"{{short_code}}"
					]
				},
				"description": "Update a URL's destination"
			},
			"response": []
		},
		{
			"name": "Delete URL",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/urls/{{short_code}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"urls",
						"{{short_code}}"
					]
				},
				"description": "Delete a URL"
			},
			"response": []
		},
		{
			"name": "Get Analytics",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/analytics/{{short_code}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"analytics",
						"{{short_code}}"
					]
				},
				"description": "Get analytics for a specific URL"
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5000",
			"type": "string"
		},
		{
			"key": "short_code",
			"value": "abc123",
			"type": "string"
		}
	]
}
